@model IEnumerable<iTechShop.Models.Producto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Lista de Productos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Producto" asp-action="Upsert" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i>Nuevo Producto</a>
                
        </div>

    </div>
    <br />

    @if(Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Categoria</th>
                <th>Almacenamiento</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.NombreProducto</th>
                    <th>@item.Precio</th>
                    <th>@item.Categoria.NombreCategoria</th>
                    <th>@item.TipoAplicacion.Nombre</th>
                    <th class="text-center">
                        <div class="w-80 btn-group" role="group">
                            <a asp-controller="Producto" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-primary">
                               <i class="fa-solid fa-pen-to-square"></i> 
                            </a>
                            <a asp-controller="Producto" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger">
                               <i class="fa-solid fa-trash-can"></i>
                            </a>
                        </div>

                    </th>
                </tr>
            }
        </tbody>
        </table>
    }
    else
    {
        <p>No hay registros de productos</p>
    }
</div>

