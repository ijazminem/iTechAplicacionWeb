@page
@model RegisterModel
@if(User.IsInRole(iTechShop.WC.AdminRole))
{
    <h1>Registrar un usuario Administrador</h1>
}
else
{
    <h1>Registrar</h1>
}

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Crear una cuenta nueva.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            @if (User.IsInRole(iTechShop.WC.AdminRole))
            {
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-warning">Registrar usuario administrador</button>
            }
            else
            {
                 <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrar</button>
            }
           
        </form>
    </div>
    
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
